<sw-modal
        :title="itemName"
        variant="large"
        :closable="false"
        class="moorl-modal-detail"
>
    <moorl-item-detail-form
            :item="item"
            :entity="entity"
            :componentName="componentName"
    />

    <template #modal-footer>
        <mt-button
                @click="$emit('cancel')"
                variant="secondary"
                size="small"
        >
            {{ $tc('global.default.cancel') }}
        </mt-button>

        <mt-button
                @click="$emit('save')"
                variant="primary"
                size="small"
        >
            {{ $tc('global.default.save') }}
        </mt-button>
    </template>
</sw-modal>
