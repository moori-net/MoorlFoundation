<sw-modal
        :title="itemName"
        variant="large"
        :closable="false"
        class="moorl-modal-detail"
>
    <moorl-item-detail-form
            v-if="showForm"
            v-bind="{ item, entity, componentName }"
    />

    <template #modal-footer>
        <mt-button
                @click="onCancel"
                variant="secondary"
                size="small"
        >
            {{ $tc('global.default.cancel') }}
        </mt-button>

        <mt-button
                @click="onSave"
                variant="primary"
                size="small"
        >
            {{ $tc('global.default.save') }}
        </mt-button>
    </template>
</sw-modal>
