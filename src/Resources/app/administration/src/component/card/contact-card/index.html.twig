{% block moorl_contact_card %}
    <sw-card class="moorl-contact-card" :title="$tc('moorl-foundation.card.contact')">
        <sw-container columns="1fr 1fr" gap="0 20px">
            {% block moorl_contact_card_inner %}
                <sw-text-field :label="$tc('moorl-foundation.properties.email')" v-model:value="item.email"/>
                <sw-text-field :label="$tc('moorl-foundation.properties.phoneNumber')" v-model:value="item.phoneNumber"/>
                <sw-url-field :label="$tc('moorl-foundation.properties.shopUrl')" v-model:value="item.shopUrl"/>
                <sw-url-field :label="$tc('moorl-foundation.properties.merchantUrl')" v-model:value="item.merchantUrl"/>
            {% endblock %}
        </sw-container>

        <slot name="append"/>
    </sw-card>
{% endblock %}
