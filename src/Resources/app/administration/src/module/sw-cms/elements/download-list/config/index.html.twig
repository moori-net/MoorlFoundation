<div class="sw-cms-el-config-moorl-download-list">
    <sw-cms-inherit-wrapper
            field="downloads"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-download-list.label.downloads')"
    >
        <template #default="{ isInherited }">
            <sw-cms-mapping-field
                    v-model:config="element.config.downloads"
                    entity="media"
                    value-types="entity"
            >
                <sw-entity-multi-select
                        class="sw-cms-el-config-download-slider__downloads"
                        v-model:entityCollection="downloadCollection"
                        @update:entity-collection="onDownloadsChange"
                        labelProperty="fileName"
                        :context="downloadSearchContext"
                        :criteria="downloadSearchCriteria"
                        :disabled="isInherited"
                />
            </sw-cms-mapping-field>
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="layout"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-download-list.label.layout')"
    >
        <template #default="{ isInherited }">
            <moorl-select-field
                    :label="$tc('sw-cms.elements.moorl-download-list.label.layout')"
                    v-model:value="element.config.layout.value"
                    :customSet="elementOptions.layout"
                    :disabled="isInherited"
            />
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="emptyText"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-download-list.label.emptyText')"
    >
        <template #default="{ isInherited }">
            <mt-text-field
                    v-model="element.config.emptyText.value"
                    :label="$tc('sw-cms.elements.moorl-download-list.label.emptyText')"
                    :disabled="isInherited"
            />
        </template>
    </sw-cms-inherit-wrapper>
</div>
