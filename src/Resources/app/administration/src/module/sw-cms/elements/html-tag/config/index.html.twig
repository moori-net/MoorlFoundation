                    v-model="element.config.tag.value"
                    :label="$tc('sw-cms.elements.moorl-html-tag.label.tag')"
                    :disabled="isInherited"
            />
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="cssClass"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-html-tag.label.cssClass')"
    >
        <template #default="{ isInherited }">
            <mt-text-field
                    v-model="element.config.cssClass.value"
                    :label="$tc('sw-cms.elements.moorl-html-tag.label.cssClass')"
                    :disabled="isInherited"
            />
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="style"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-html-tag.label.style')"
    >
        <template #default="{ isInherited }">
            <mt-text-field
                    v-model="element.config.style.value"
                    :label="$tc('sw-cms.elements.moorl-html-tag.label.style')"
                    :disabled="isInherited"
            />
        </template>
    </sw-cms-inherit-wrapper>
</div>
