<div class="sw-cms-el-config-moorl-html-tag">
    <sw-cms-inherit-wrapper
            field="content"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-html-tag.label.content')"
    >
        <template #default="{ isInherited }">
            <sw-cms-mapping-field
                    v-model:config="element.config.content"
                    value-types="string"
            >
                <mt-text-field
                        v-model="element.config.content.value"
                        :label="$tc('sw-cms.elements.moorl-html-tag.label.content')"
                        :disabled="isInherited"
                />
            </sw-cms-mapping-field>
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="tag"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-html-tag.label.tag')"
    >
