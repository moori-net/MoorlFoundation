<div class="sw-cms-el-moorl-replacer" :style="elementCss">
    <div>
        <h1>
            <sw-icon name="default-arrow-switch" size="24"></sw-icon>
            {{ $tc('sw-cms.elements.moorl-replacer.title') }}
        </h1>
        <p>{{ $tc('sw-cms.elements.moorl-replacer.description') }}</p>
        <p>
            <a href="https://store.shopware.com/moori.html" target="_blank">{{ $tc('sw-cms.elements.moorl-replacer.storeLink') }}</a>
        </p>
    </div>

    <div>
        <sw-entity-single-select
                :placeholder="$tc('sw-cms.elements.moorl-replacer.label.selectConfig')"
                :criteria="cmsElementConfigCriteria"
                entity="moorl_cms_element_config"
                v-model="cmsElementConfigId">
            <template #result-item="{ item, index }">
                <slot name="result-item" v-bind="{ item, index }">
                    <li is="sw-select-result" v-bind="{ item, index }">
                        {{ item.type }} | {{ item.name }}
                    </li>
                </slot>
            </template>
        </sw-entity-single-select>
    </div>

    <div>
        <sw-button variant="" @click="onLoadCmsElementConfig">
            <sw-icon name="default-action-save" size="16"></sw-icon>
        </sw-button>
    </div>
</div>
