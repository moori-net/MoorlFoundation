<div class="sw-cms-el-config-moorl-location">
    <sw-cms-inherit-wrapper
            field="locationLat"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-location.label.locationLat')"
    >
        <template #default="{ isInherited }">
            <sw-cms-mapping-field
                    v-model:config="element.config.locationLat"
                    value-types="number"
            >
                <mt-number-field
                        :label="$tc('sw-cms.elements.moorl-location.label.locationLat')"
                        numberType="float"
                        step="0.00001"
                        digits="5"
                        v-model="element.config.locationLat.value"
                        :disabled="isInherited"
                />
            </sw-cms-mapping-field>
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="locationLon"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-location.label.locationLat')"
    >
        <template #default="{ isInherited }">
            <sw-cms-mapping-field
                    v-model:config="element.config.locationLon"
                    value-types="number"
            >
                <mt-number-field
                        :label="$tc('sw-cms.elements.moorl-location.label.locationLat')"
                        numberType="float"
                        step="0.00001"
                        digits="5"
                        v-model="element.config.locationLon.value"
                        :disabled="isInherited"
                />
            </sw-cms-mapping-field>
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="markerId"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-location.label.marker')"
    >
        <template #default="{ isInherited }">
            <sw-cms-mapping-field
                    v-model:config="element.config.marker"
                    entity="moorl_marker"
                    value-types="entity"
            >
                <sw-entity-single-select
                        :label="$tc('sw-cms.elements.moorl-location.label.marker')"
                        entity="moorl_marker"
                        v-model:value="element.config.markerId.value"
                        :disabled="isInherited"
                />
            </sw-cms-mapping-field>
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="height"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-location.label.height')"
    >
        <template #default="{ isInherited }">
            <mt-text-field
                    :label="$tc('sw-cms.elements.moorl-location.label.height')"
                    v-model="element.config.height.value"
                    :disabled="isInherited"
            />
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="overrideOsmOptions"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-location.label.overrideOsmOptions')"
    >
        <template #default="{ isInherited }">
            <mt-switch
                    :label="$tc('sw-cms.elements.moorl-location.label.overrideOsmOptions')"
                    v-model="element.config.overrideOsmOptions.value"
                    :disabled="isInherited"
            />
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="osmOptions"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-location.label.osmOptions')"
    >
        <template #default="{ isInherited }">
            <sw-multi-select
                    :label="$tc('sw-cms.elements.moorl-location.label.osmOptions')"
                    v-model:value="element.config.osmOptions.value"
                    :options="elementOptions.osmOptions"
                    :disabled="isInherited"
            />
        </template>
    </sw-cms-inherit-wrapper>

    <sw-cms-inherit-wrapper
            field="legend"
            :element="element"
            :label="$tc('sw-cms.elements.moorl-location.label.legend')"
    >
        <template #default="{ isInherited }">
            <mt-switch
                    :label="$tc('sw-cms.elements.moorl-location.label.legend')"
                    v-model="element.config.legend.value"
                    :disabled="isInherited"
            />
        </template>
    </sw-cms-inherit-wrapper>

    <template v-if="element.config.legend.value">
        <sw-cms-inherit-wrapper
                field="legendItems"
                :element="element"
                :label="$tc('sw-cms.elements.moorl-location.label.legendItems')"
        >
            <template #default="{ isInherited }">
                <sw-entity-multi-id-select
                        :repository="markerRepository"
                        :label="$tc('sw-cms.elements.moorl-location.label.legendItems')"
                        v-model:value="element.config.legendItems.value"
                        :disabled="isInherited"
                />
            </template>
        </sw-cms-inherit-wrapper>

        <router-link
            target="_blank"
            rel="noopener"
            :to="{ name: 'moorl.marker.list' }"
        >
            {{ $tc('moorl-marker.title') }}
        </router-link>
    </template>
</div>
