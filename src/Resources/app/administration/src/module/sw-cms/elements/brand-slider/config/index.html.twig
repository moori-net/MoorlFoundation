<div class="sw-cms-el-config-appflix-brand-slider">

    <sw-entity-multi-select
        v-model="brandCollection"
        @change="onBrandsChange"
        :criteria="brandMediaFilter"
        :placeholder="$tc(snippetPrefix + 'config.selectBrands')">
    </sw-entity-multi-select>

    <sw-field type="text"
              :label="$tc(snippetPrefix + 'config.height')"
              v-model="element.config.height.value">
    </sw-field>

    <sw-field type="text"
              :label="$tc(snippetPrefix + 'config.minWidth')"
              v-model="element.config.elMinWidth.value">
    </sw-field>

    <sw-field type="switch"
              bordered
              :label="$tc(snippetPrefix + 'config.rotate')"
              v-model="element.config.rotate.value">
    </sw-field>

    <sw-field type="switch"
              bordered
              :label="$tc(snippetPrefix + 'config.useLink')"
              v-model="element.config.useLink.value">
    </sw-field>

    <sw-field type="switch"
              bordered
              :label="$tc(snippetPrefix + 'config.onlyImages')"
              v-model="element.config.onlyImages.value">
    </sw-field>

</div>
