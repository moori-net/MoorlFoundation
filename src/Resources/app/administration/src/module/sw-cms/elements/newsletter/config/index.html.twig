<div class="sw-cms-el-config-moorl-newsletter">
    <sw-tabs class="sw-cms-el-config-moorl-newsletter__tabs" default-item="general">
        <template #default="{ active }">
            <sw-tabs-item name="general" :activeTab="active">
                {{ $tc('sw-cms.elements.moorl-newsletter.tab.general') }}
            </sw-tabs-item>
            <sw-tabs-item name="colors" :activeTab="active">
                {{ $tc('sw-cms.elements.moorl-newsletter.tab.colors') }}
            </sw-tabs-item>

            <sw-tabs-item name="text" :activeTab="active">
                {{ $tc('sw-cms.elements.moorl-newsletter.tab.text') }}
            </sw-tabs-item>
        </template>

        <template #content="{ active }">
            <sw-container v-if="active === 'general'" class="sw-cms-el-config-moorl-newsletter__tab-general">
                <sw-switch-field
                        bordered
                        :label="$tc('sw-cms.elements.moorl-newsletter.config.optin')"
                        v-model:value="element.config.optin.value"
                />
            </sw-container>

            <sw-container v-if="active === 'colors'" class="sw-cms-el-config-moorl-newsletter__tab-colors">
                <sw-colorpicker
                    colorOutput="hex"
                    :zIndex="1000"
                    :label="$tc('sw-cms.elements.moorl-newsletter.config.buttonBackground')"
                    v-model:value="element.config.buttonBackground.value"
                />

                <sw-colorpicker
                    colorOutput="hex"
                    :zIndex="1000"
                    :label="$tc('sw-cms.elements.moorl-newsletter.config.buttonTextColor')"
                    v-model:value="element.config.buttonTextColor.value"
                />

                <sw-colorpicker
                    colorOutput="hex"
                    :zIndex="1000"
                    :label="$tc('sw-cms.elements.moorl-newsletter.config.privacyColor')"
                    v-model:value="element.config.privacyColor.value"
                />
            </sw-container>

            <sw-container v-if="active === 'text'" class="sw-cms-el-config-moorl-newsletter__tab-text">
                <sw-alert variant="info">
                    {{ $tc('sw-cms.elements.moorl-newsletter.config.hint') }}
                </sw-alert>

                <sw-text-field
                        v-model:value="element.config.placeholder.value"
                        :label="$tc('sw-cms.elements.moorl-newsletter.config.placeholder')"
                />

                <sw-text-field
                        v-model:value="element.config.buttonText.value"
                        :label="$tc('sw-cms.elements.moorl-newsletter.config.buttonText')"
                />
            </sw-container>
        </template>
    </sw-tabs>
</div>
