<div class="sw-cms-block-moorl-interactive-slider">
    <div class="sw-cms-block-moorl-interactive-slider-config">
        <sw-button variant="primary"
                   @click="showConfigurationModal = true">
            {{ $tc('moorl-foundation.buttons.configuration') }}
        </sw-button>

        <sw-button variant="primary"
                   @click="addSlot()">
            {{ $tc('moorl-foundation.buttons.add') }}
        </sw-button>

        <sw-button variant="primary"
                   @click="removeSlot()">
            {{ $tc('moorl-foundation.buttons.remove') }}
        </sw-button>

        <sw-select-field :placeholder="$tc('sw-cms.elements.moorl-foundation-listing.label.activeSlot')"
                         v-model="activeSlot">
            <option v-for="slot in block.slots" :value="slot.id">{{ slot.slot }}</option>
        </sw-select-field>
    </div>

    <div class="sw-cms-block-moorl-interactive-slider-content" ref="content">
        <div v-for="slot in block.slots"
             v-if="slot.id === activeSlot"
             :style="slotStyle"
             class="sw-cms-block-moorl-interactive-slider-slot">
            <slot :name="slot.slot"></slot>
        </div>
    </div>

    <sw-modal v-if="showConfigurationModal"
              :title="$tc('global.default.edit')"
              @modal-close="showConfigurationModal = false">
        <sw-container columns="1fr 1fr" gap="0px 30px">
            <sw-field v-model="block.customFields.moorl_interactive_slider.itemWidth"
                      type="text"
                      :label="$tc('sw-cms.elements.moorl-foundation-listing.label.itemWidth')">
            </sw-field>

            <sw-field v-model="block.customFields.moorl_interactive_slider.itemHeight"
                      type="text"
                      :label="$tc('sw-cms.elements.moorl-foundation-listing.label.itemHeight')">
            </sw-field>

            <sw-field v-model="block.customFields.moorl_interactive_slider.gapSize"
                      type="text"
                      :label="$tc('sw-cms.elements.moorl-foundation-listing.label.gapSize')">
            </sw-field>
            
            <sw-field v-model="block.customFields.moorl_interactive_slider.speed"
                      type="number"
                      :label="$tc('sw-cms.elements.moorl-foundation-listing.label.speed')">
            </sw-field>

            <sw-field v-model="block.customFields.moorl_interactive_slider.autoplayTimeout"
                      type="number"
                      :label="$tc('sw-cms.elements.moorl-foundation-listing.label.autoplayTimeout')">
            </sw-field>

            <sw-field v-model="block.customFields.moorl_interactive_slider.autoplay"
                      type="switch"
                      bordered
                      :label="$tc('sw-cms.elements.moorl-foundation-listing.label.autoplay')">
            </sw-field>

            <sw-field v-model="block.customFields.moorl_interactive_slider.autoplayHoverPause"
                      type="switch"
                      bordered
                      :label="$tc('sw-cms.elements.moorl-foundation-listing.label.autoplayHoverPause')">
            </sw-field>

            <sw-field v-model="block.customFields.moorl_interactive_slider.navigation"
                      type="switch"
                      bordered
                      :label="$tc('sw-cms.elements.moorl-foundation-listing.label.navigation')">
            </sw-field>

            <sw-select-field :label="$tc('sw-cms.elements.moorl-foundation-listing.label.animateIn')"
                             :placeholder="$tc('sw-cms.elements.moorl-foundation-listing.label.animateIn')"
                             v-model="block.customFields.moorl_interactive_slider.animateIn">
                <optgroup v-for="item in moorlFoundation.animateCss" :label="item.optgroup">
                    <option v-for="value in item.options" :value="value">{{ value }}</option>
                </optgroup>
            </sw-select-field>

            <sw-select-field :label="$tc('sw-cms.elements.moorl-foundation-listing.label.animateOut')"
                             :placeholder="$tc('sw-cms.elements.moorl-foundation-listing.label.animateIn')"
                             v-model="block.customFields.moorl_interactive_slider.animateOut">
                <optgroup v-for="item in moorlFoundation.animateCss" :label="item.optgroup">
                    <option v-for="value in item.options" :value="value">{{ value }}</option>
                </optgroup>
            </sw-select-field>
        </sw-container>
    </sw-modal>
</div>
