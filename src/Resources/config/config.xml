<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>Stylesheet Addon-Ons</title>
        <title lang="de-DE">Stylesheet Addon-Ons</title>
        <input-field type="bool">
            <name>fontawesome</name>
            <label>Enable Font Awesome 5 Free</label>
            <label lang="de-DE">Aktiviere Font Awesome 5 Free</label>
        </input-field>
        <input-field type="bool">
            <name>animate</name>
            <label>Enable Animate.css</label>
            <label lang="de-DE">Aktiviere Animate.css</label>
        </input-field>
    </card>

    <card>
        <title>Animate.css Konfiguration</title>
        <title lang="de-DE">Animate.css Konfiguration</title>
        <input-field type="textarea">
            <name>animateIn</name>
            <label>Animate In</label>
            <label lang="de-DE">Animate In</label>
            <defaultValue>.cms-block|slideInUp</defaultValue>
            <placeholder>#CSS-Selector#|#Animation-Class#</placeholder>
        </input-field>
        <input-field type="textarea">
            <name>animateOut</name>
            <label>Animate Out</label>
            <label lang="de-DE">Animate Out</label>
            <defaultValue></defaultValue>
            <placeholder>#CSS-Selector#|#Animation-Class#</placeholder>
        </input-field>
        <input-field type="textarea">
            <name>hover</name>
            <label>Hover</label>
            <label lang="de-DE">Hover</label>
            <defaultValue></defaultValue>
            <placeholder>#CSS-Selector#|#Animation-Class#</placeholder>
        </input-field>
    </card>

</config>
