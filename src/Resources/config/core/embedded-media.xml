<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="MoorlFoundation\Core\Content\EmbeddedMedia\EmbeddedMediaDefinition">
            <tag name="shopware.entity.definition" entity="moorl_media"/>
        </service>

        <service id="MoorlFoundation\Core\Content\EmbeddedMedia\EmbeddedMediaTranslationDefinition">
            <tag name="shopware.entity.definition" entity="moorl_media_translation"/>
        </service>

        <service id="MoorlFoundation\Core\Content\EmbeddedMedia\EmbeddedMediaVideoDefinition">
            <tag name="shopware.entity.definition" entity="moorl_media_video"/>
        </service>

        <service id="MoorlFoundation\Core\Content\EmbeddedMedia\DataAbstractionLayer\EmbeddedMediaIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Dbal\Common\IteratorFactory"/>
            <argument type="service" id="moorl_media.repository"/>

            <tag name="shopware.entity_indexer"/>
        </service>
    </services>
</container>
