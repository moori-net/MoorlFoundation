{% set hotspotContent %}
    {% for item in items %}
        {% set itemType = item.productId ? 'product' : item.categoryId ? 'category' : 'product-stream' %}

        {% set itemUrl = null %}
        {% set itemName = null %}
        {% if itemType == 'product' %}
            {% set itemUrl = seoUrl('frontend.detail.page', {'productId': item.productId}) %}
            {% set itemName = item.product.translated.name %}
        {% elseif itemType == 'category' %}
            {% set itemUrl = seoUrl('frontend.navigation.page', {'navigationId': item.categoryId}) %}
            {% set itemName = item.category.translated.name %}
        {% endif %}

        {% if useSvg %}
            <a
                    href="{{ itemUrl }}"
                    class="{{ itemType }}"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    title="{{ itemName }}"
            >{{ item.getSvgShapeHTML()|raw }}</a>
        {% else %}
            <a
                    href="{{ itemUrl }}"
                    class="moorl-multi-banner-dot {{ itemType }}"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    style="top: {{ item.posTop }}%; left: {{ item.posLeft }}%"
                    title="{{ itemName }}"
            ><div class="pulse"></div></a>
        {% endif %}
    {% endfor %}
{% endset %}

{% if useSvg %}
    {% if not width or not height %}
        {% sw_include "@Storefront/storefront/utilities/alert.html.twig" with {
            type: "danger",
            content: "moorl-multi-banner.missingMetaData"|trans
        } %}
    {% endif %}

    <figure>
        <svg viewBox="0 0 {{ width }} {{ height }}">
            {{ hotspotContent }}
        </svg>
    </figure>
{% else %}
    {{ hotspotContent }}
{% endif %}
