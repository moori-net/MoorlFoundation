{% set content %}
    <iframe
            class="w-100 h-100{% if embeddedMedia.config.disablePointerEvents %} disable-pointer-events{% endif %}"
            src="{{ embeddedMedia.embeddedUrl }}"
            frameborder="0"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
    ></iframe>
{% endset %}

{% if embeddedMedia.config.cookieConsent %}
    {% sw_include '@MoorlFoundation/plugin/moorl-foundation/component/cookie-box/index.html.twig' with {
        cookieKey: 'moorl-product-video',
        content: content,
        class: 'w-100 h-100'
    } %}
{% else %}
    {{ content|raw }}
{% endif %}
